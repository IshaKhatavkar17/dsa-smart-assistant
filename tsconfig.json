{
  "compilerOptions": {
    "module": "Node16",                       // Better for modern Node.js
    "target": "ES2022",                       // Latest features
    "outDir": "out",                          // Compiled JS output
    "lib": [
      "ES2022"
    ],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,                           // Enable strict mode
    "esModuleInterop": true,                  // Allow default imports
    "skipLibCheck": true,                     // Faster build, ignore type-checking of libs
    "forceConsistentCasingInFileNames": true  // Prevents casing mismatches
  },
  "exclude": [
    "node_modules",
    ".vscode-test"
  ]
}
